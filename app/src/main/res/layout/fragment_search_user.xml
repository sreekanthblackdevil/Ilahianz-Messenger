<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFragments.EventsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/material_grey_outline_rect"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/blood_donation_console"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_blood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/heading"
                    android:layout_toStartOf="@id/blood_image"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="10dp"
                    android:text="@string/blood_donation_banner_quotes"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/blood_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    android:src="@mipmap/blood_transfusion" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/text_blood"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="#4D838383" />

                <Button
                    android:id="@+id/blood_console_button"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/view1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_regular"
                    android:foreground="?android:selectableItemBackground"
                    android:foregroundTint="@color/blue_dark"
                    android:paddingStart="16dp"
                    android:paddingEnd="0dp"
                    android:text="Explore Blood Donation Console"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/blue_dark"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/container2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/material_grey_outline_rect"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/heading2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Ideas &amp; Thoughts"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/text_ideas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/heading2"
                    android:layout_toStartOf="@id/ideas_image"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="10dp"
                    android:text="@string/ideas_quotes"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/ideas_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    android:src="@mipmap/marketing" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/text_ideas"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="#4D838383" />

                <Button
                    android:id="@+id/ideas_console_btn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/view2"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_regular"
                    android:foreground="?android:selectableItemBackground"
                    android:foregroundTint="@color/blue_dark"
                    android:paddingStart="16dp"
                    android:paddingEnd="0dp"
                    android:text="Share your Ideas with Ilahianz"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/blue_dark"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.BackgroundFragment">

    <LinearLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_drawable"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/banner_text_2" />

        <ImageView
            android:id="@+id/right_drawable"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/left_image_margin_top_register"
            android:src="@drawable/banner_image_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/enter_email_address" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="20dp"
            android:textSize="16sp"
            android:background="@drawable/dialog_edit_text_background"
            android:fontFamily="@font/roboto_regular"
            android:hint="@string/email"
            android:padding="16dp" />

        <Button
            android:id="@+id/sent_action"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/signin_btn_bg"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/sent_verification_to_email"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_medium"
            android:padding="10dp"
            android:textSize="13sp"
            android:text="@string/email_verification_quoets" />
    </LinearLayout>


</RelativeLayout>
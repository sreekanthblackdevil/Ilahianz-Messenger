<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/sky_blue"
    tools:context=".Fragments.RegisterFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sky_blue">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/sky_blue"
                app:layout_scrollFlags="exitUntilCollapsed|scroll">

                <LinearLayout
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/sky_blue"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/left_drawable"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/banner_text_1"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/right_drawable"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="@dimen/left_image_margin_top_register"
                        android:src="@drawable/banner_image_1"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:id="@+id/form_container"
            android:layout_width="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_marginTop="?actionBarSize"
            android:background="@drawable/bottom_flat_fill_white"
            android:visibility="visible"
            android:layout_height="match_parent">
            <View
                android:layout_width="40dp"
                android:layout_height="6dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/handle_bg" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/form_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
                    <!---->


                    <TextView
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="16dp"
                        style="@style/editTextTitleTextStyle"
                        android:text="@string/first_name"/>

                    <EditText
                        android:id="@+id/first_name"
                        android:hint="@string/first_name"
                        android:inputType="textPersonName"
                        style="@style/registerEditTextStyle"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/view_color" />

                    <!---->
                    <TextView
                        style="@style/editTextTitleTextStyle"
                        android:text="@string/last_name" />

                    <EditText
                        android:id="@+id/last_name"
                        style="@style/registerEditTextStyle"
                        android:hint="@string/last_name"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/view_color" />
                    <!--            -->

                    <TextView
                        style="@style/editTextTitleTextStyle"
                        android:text="@string/gender"
                        android:textColor="@color/blue_dark" />

                    <RadioGroup
                        android:id="@+id/radio_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <RadioButton
                            android:id="@+id/male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/male" />

                        <RadioButton
                            android:id="@+id/female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/female" />

                        <RadioButton
                            android:id="@+id/other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/other" />
                    </RadioGroup>
                    <!---->
                    <TextView
                        style="@style/editTextTitleTextStyle"
                        android:text="@string/date_of_birth"
                        android:textColor="@color/blue_dark" />

                    <EditText
                        android:id="@+id/birthday"
                        style="@style/registerEditTextStyle"
                        android:drawableEnd="@drawable/ic_lock_black_24dp"
                        android:drawablePadding="10dp"
                        android:editable="false"
                        android:hint="@string/birthday"
                        android:inputType="none" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/view_color" />
                    <!---->

                    <TextView
                        style="@style/editTextTitleTextStyle"
                        android:text="@string/city"
                        android:textColor="@color/blue_dark" />

                    <EditText
                        android:id="@+id/city"
                        style="@style/registerEditTextStyle"
                        android:hint="@string/city"
                        android:inputType="textPersonName" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/view_color" />
                    <!--            -->
                    <TextView
                        style="@style/editTextTitleTextStyle"
                        android:text="@string/phone_optional"
                        android:textColor="@color/blue_dark" />

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        style="@style/registerEditTextStyle"
                        android:hint="@string/phone_number"
                        android:inputType="phone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/view_color" />

                    <TextView
                        style="@style/editTextTitleTextStyle"
                        android:text="@string/email"
                        android:textColor="@color/blue_dark" />

                    <EditText
                        android:id="@+id/email"
                        style="@style/registerEditTextStyle"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/view_color" />
                    <!--            -->
                    <TextView
                        style="@style/editTextTitleTextStyle"
                        android:text="@string/password"
                        android:textColor="@color/blue_dark" />

                    <EditText
                        android:id="@+id/password"
                        style="@style/registerEditTextStyle"
                        android:hint="@string/password"
                        android:inputType="textPassword"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/view_color" />

                    <TextView
                        style="@style/editTextTitleTextStyle"
                        android:text="@string/confirm_password"
                        android:textColor="@color/blue_dark" />

                    <EditText
                        android:id="@+id/confirm_password"
                        style="@style/registerEditTextStyle"
                        android:hint="@string/confirm"
                        android:inputType="textPassword"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/view_color" />

                    <TextView
                        style="@style/editTextTitleTextStyle"
                        android:text="@string/who_you_are"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/blue_dark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/rectangle_outline"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/radio_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <RadioButton
                                android:id="@+id/radio_student"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/student" />

                            <RadioButton
                                android:id="@+id/radio_teacher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/staff" />

                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/department"
                                style="@style/registerEditTextStyle"
                                android:editable="false"
                                android:hint="@string/department"
                                android:inputType="none" />

                            <View
                                android:id="@+id/view_department"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@color/view_color" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:id="@+id/id_container"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_toStartOf="@+id/scan_button"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/id"
                                        style="@style/registerEditTextStyle"
                                        android:editable="false"
                                        android:hint="@string/id_no"
                                        android:inputType="none" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.5dp"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:background="@color/view_color" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="5dp"
                                        android:textSize="13sp"
                                        android:textColor="@color/dd_green"
                                        android:fontFamily="@font/roboto_medium"
                                        android:text="@string/scan_id_card_request" />
                                </LinearLayout>

                                <Button
                                    android:id="@+id/scan_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_margin="10dp"
                                    android:background="@android:color/transparent"
                                    android:fontFamily="@font/roboto_bold"
                                    android:padding="3dp"
                                    android:text="@string/scan"
                                    android:textAllCaps="false"
                                    android:textColor="@color/dd_green" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_register"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/register_btn_color"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="13sp"
                        android:text="@string/create_account"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>